<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.campus_know_all.PersonalSendActivity" 
    android:orientation="vertical">

	<TableLayout android:id="@+id/tableLayout4"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:stretchColumns="0,4"	
		>
		<!-- 第一行 -->
		<TableRow android:id="@+id/send_tableRow1" 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<TextView android:text="时间：" 
				android:id="@+id/send_textView1" 
				android:layout_width="wrap_content"
				android:textSize="24px" 
				android:layout_height="wrap_content"
				/>
			<EditText android:id="@+id/send_editText1" 
				android:textSize="24px" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:minWidth="200dp"
				android:singleLine="true"
				/>
		</TableRow>
		<!-- 第二行 -->	
		<TableRow android:id="@+id/send_tableRow2" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="地点：" 
				android:id="@+id/send_textView2" 
				android:textSize="24px" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
			<EditText android:layout_height="wrap_content" 
				android:layout_width="fill_parent" 
				android:textSize="24px" 
				android:id="@+id/send_editText2" 
				android:singleLine="true"
				/>
		</TableRow>
		<!-- 第3行 -->
		<TableRow android:id="@+id/send_tableRow3" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="类别：" 
				android:id="@+id/send_textView3" 
				android:textSize="24px" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"/>
			<Spinner 
			    android:entries="@array/ctype"
			    android:layout_height="wrap_content"
			    android:layout_width="wrap_content"
			    android:id="@+id/spinner1"/>

		</TableRow>
		<!-- 第4行 -->
		<TableRow android:id="@+id/send_tableRow4" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="标题：" 
				android:id="@+id/send_textView4" 
				android:layout_width="wrap_content"
				android:textSize="24px" 
				android:layout_height="wrap_content"
				/>
			<EditText android:id="@+id/send_editText4" 
				android:textSize="24px" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				/>
		</TableRow>
		<!-- 第5行 -->
		<TableRow android:id="@+id/send_tableRow5" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">
			<TextView android:text="事件：" 
				android:id="@+id/send_textView5" 
				android:layout_width="wrap_content"
				android:textSize="24px" 
				android:layout_height="wrap_content"
				/>
			<EditText android:id="@+id/send_editText5" 
				android:textSize="24px" 
				android:layout_width="fill_parent" 
				android:layout_height="wrap_content" 
				android:minWidth="200px"
				/>
		</TableRow>
	</TableLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <Button 
        android:id="@+id/send_cancel"
        android:text="返回"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>         
      <Button 
        android:id="@+id/send_submit"
        android:text="发布"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>      
        
    </LinearLayout>	
	
	
</LinearLayout>
